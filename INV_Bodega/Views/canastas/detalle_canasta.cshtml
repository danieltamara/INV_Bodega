    <div class="form-group">
        <label class="control-label col-md-2">Barras</label>
        <div class="col-md-10">
            <input type="text" maxlength="13" name="barras" class="form-control" autofocus required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Cantidad</label>
