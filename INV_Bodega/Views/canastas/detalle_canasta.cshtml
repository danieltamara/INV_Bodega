        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Agregar Item" class="btn btn-default" />
        
        </div>
    </div> 
</div>

    <div>
        @Html.ActionLink("<-Regresar", "Index")
    </div>

    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Codigo de barras</th>
                <th>Referencia</th>
                <th>Talla</th>
                <th>color</th>
                <th>Cantidad</th>


            </tr>
        </thead>
        <tbody>
            @{ foreach (var item in Model)
                {
                        <tr>
                            <td>@item.Barras</td>
                            <td>@item.Referencia</td>
                            <td>@item.Talla</td>
                            <td>@item.Color</td>
                            <td>@item.Cant</td>

                        </tr>
                }
            }
        </tbody>
    </table>
}



