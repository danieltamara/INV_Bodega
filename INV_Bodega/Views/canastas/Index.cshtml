@model IEnumerable<INV_Bodega.Models.BodegaCLS>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<h2>Canastas Registradas</h2>


<p>
    @Html.ActionLink("Nueva Canasta", "Create")
</p>
<table id="example" class="table table-striped table-bordered" style="width:70%">
    <tr>
        <th width="30%">

            @Html.DisplayNameFor(model => model.Bodega)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Bloque)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Pasillo)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Canasta)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Usuario)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a data-toggle="modal" class="" href="#myModal" id="omodal" value=""> @Html.DisplayFor(modelItem => item.Bodega)</a>

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bloque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pasillo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Canasta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario)
            </td>



            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.rowid }) |
                    @Html.ActionLink("Details", "Details", new { id=item.rowid }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.rowid })
                </td>*@
        </tr>
    }

</table>


<div class="container">
    <!-- Trigger the modal with a button -->
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Detalles</h4>
                </div>

                <div class="modal-body">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Referencia</th>
                                <th>Talla</th>
                                <th>color</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Referencia</td>
                                        <td>@item.Talla</td>
                                        <td>@item.Color</td>
                                        <td>@item.Cant</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    $("#omodal").on("click", function () {

    });

</script>